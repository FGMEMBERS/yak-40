<!-- Variometer
3D instrument for Tu-154 -->
<PropertyList>
 <path>rk.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <emission>
    <red-prop>tu154/light/instruments/int-red</red-prop>
    <green-prop>tu154/light/instruments/int-green</green-prop>
    <blue-prop>tu154/light/instruments/int-blue</blue-prop>
  </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>needle</object-name>
  <emission>
    <red-prop>tu154/light/instruments/int-red</red-prop>
    <green-prop>tu154/light/instruments/int-green</green-prop>
    <blue-prop>tu154/light/instruments/int-blue</blue-prop>
  </emission>
</animation>

<!--Needles-->
<animation>
    <object-name>needle1</object-name>
    <type>rotate</type>
    <property>yak-40/instrumentation/rk/needle1</property>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
    <object-name>needle2</object-name>
    <type>rotate</type>
    <property>yak-40/instrumentation/rk/needle2</property>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>


</PropertyList>
