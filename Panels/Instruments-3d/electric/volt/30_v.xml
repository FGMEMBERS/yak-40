<!-- Check lamps on captain panel button
3D instrument for Tu-154 -->
<PropertyList>
 <path>30_v.ac</path>
 <!-- Internal instruments lighting -->
 <animation>
   <type>material</type>
   <object-name>base</object-name>
   <object-name>needle</object-name>
   <emission>
     <red-prop>tu154/light/instruments/int-red</red-prop>
     <green-prop>tu154/light/instruments/int-green</green-prop>
     <blue-prop>tu154/light/instruments/int-blue</blue-prop>
   </emission>
 </animation>
 <!--External panel lighting-->
 <animation>
   <type>material</type>
   <object-name>cover</object-name>
   <emission>
     <red-prop>tu154/light/panel/ext-red</red-prop>
     <green-prop>tu154/light/panel/ext-green</green-prop>
     <blue-prop>tu154/light/panel/ext-blue</blue-prop>
   </emission>
 </animation>

  
<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>yak-40/instrumentation/electrical/v_30</property>
    <interpolation>
      <entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
      <entry><ind>	5.0</ind>	<dep>	45.0</dep></entry>
      <entry><ind>	10.0</ind>	<dep>	90.0</dep></entry>
      <entry><ind>	15.0</ind>	<dep>	134.0</dep></entry>
      <entry><ind>	20.0</ind>	<dep>	178.0</dep></entry>
      <entry><ind>	25.0</ind>	<dep>	222.5</dep></entry>
      <entry><ind>	30.0</ind>	<dep>	268.0</dep></entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>



</PropertyList>
