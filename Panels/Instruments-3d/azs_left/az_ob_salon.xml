<PropertyList>
 <path>sw.ac</path>


<!-- **************************** handle **************************** -->
<animation>
    <type>rotate</type>
    <object-name>handle</object-name>
    <object-name>base</object-name>
    <object-name>base1</object-name>
    <property>yak-40/switches/az_ob_salon</property>
    <interpolation>
      <entry><ind>0</ind>	<dep>30.0</dep></entry>
      <entry><ind>1</ind>	<dep>-30.0</dep></entry>
     </interpolation>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
</animation>


<!-- ******************** pick staff ******************************* -->
<animation>
	<type>pick</type>
	<object-name>handle</object-name>
	<visible>true</visible>
	<action>
		<button>3</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
			setprop("yak-40/switches/az_ob_salon", 1);
			</script>
		</binding>
	</action>
</animation>

<animation>
	<type>pick</type>
	<object-name>handle</object-name>
	<visible>true</visible>
	<action>
		<button>4</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
			setprop("yak-40/switches/az_ob_salon", 0);
			</script>
		</binding>
	</action>
</animation>


</PropertyList>
