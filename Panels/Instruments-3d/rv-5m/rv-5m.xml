<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>yak-40/instrumentation/rv-5m/indicated-altitude-m</property>
    <interpolation>
      <entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
      <entry><ind>	10.0</ind>	<dep>	15.0</dep></entry>
      <entry><ind>	20.0</ind>	<dep>	30.0</dep></entry>
      <entry><ind>	30.0</ind>	<dep>	45.0</dep></entry>
      <entry><ind>	40.0</ind>	<dep>	60.0</dep></entry>
      <entry><ind>	50.0</ind>	<dep>	75.0</dep></entry>
      <entry><ind>	60.0</ind>	<dep>	91.5</dep></entry>
      <entry><ind>	80.0</ind>	<dep>	123.0</dep></entry>
      <entry><ind>	100.0</ind>	<dep>	155.0</dep></entry>
      <entry><ind>	200.0</ind>	<dep>	179.0</dep></entry>
      <entry><ind>	300.0</ind>	<dep>	203.0</dep></entry>
      <entry><ind>	400.0</ind>	<dep>	226.0</dep></entry>
      <entry><ind>	500.0</ind>	<dep>	251.0</dep></entry>
      <entry><ind>	700.0</ind>	<dep>	300.0</dep></entry>
      <entry><ind>	800.0</ind>	<dep>	325.0</dep></entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>index</object-name>
  <property>yak-40/instrumentation/rv-5m/index-m</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
    <entry><ind>	10.0</ind>	<dep>	15.0</dep></entry>
    <entry><ind>	20.0</ind>	<dep>	30.0</dep></entry>
    <entry><ind>	30.0</ind>	<dep>	45.0</dep></entry>
    <entry><ind>	40.0</ind>	<dep>	60.0</dep></entry>
    <entry><ind>	50.0</ind>	<dep>	75.0</dep></entry>
    <entry><ind>	60.0</ind>	<dep>	91.5</dep></entry>
    <entry><ind>	80.0</ind>	<dep>	123.0</dep></entry>
    <entry><ind>	100.0</ind>	<dep>	155.0</dep></entry>
    <entry><ind>	200.0</ind>	<dep>	179.0</dep></entry>
    <entry><ind>	300.0</ind>	<dep>	203.0</dep></entry>
    <entry><ind>	400.0</ind>	<dep>	226.0</dep></entry>
    <entry><ind>	500.0</ind>	<dep>	251.0</dep></entry>
    <entry><ind>	700.0</ind>	<dep>	300.0</dep></entry>
    <entry><ind>	800.0</ind>	<dep>	325.0</dep></entry>
  </interpolation>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Controls-->
<animation>
  <type>rotate</type>
  <object-name>hs</object-name>
  <property>yak-40/instrumentation/rv-5m/knob</property>  
  <factor>0.3</factor>
  <center>
    <x-m>0.0</x-m>
    <y-m>-0.03055</y-m>
    <z-m>-0.02676</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>


<animation>
  <type>pick</type>
  <object-name>hs</object-name>
  <visible>true</visible>
  <action>
    <button>4</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>yak-40/instrumentation/rv-5m/knob</property>
      <step>-10.0</step>
      <min>0.0</min>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs</object-name>
  <visible>true</visible>
  <action>
    <button>3</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>yak-40.instruments.rv5m-l(1);</script>
    </binding>
    
  </action>
</animation>



</PropertyList>
